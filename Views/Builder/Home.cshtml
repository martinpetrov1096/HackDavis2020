@{
    ViewData["Title"] = "Builder Home Page";
    @model UserBluePrints;
    
}

<div class="d-flex flex-row justify-content-end">
    <a class ="btn btn-secondary"asp-action="Create">Create New BluePrint</a>
    <div style="color: white">penis</div>
    <a class ="btn btn-secondary"asp-action="Suggested">View Suggested BluePrints</a>
</div>



    <h1 class="display-3">My BluePrints</h1>
        @foreach (var bluePrint in Model.BluePrints) {
            <div class="d-flex flex-row">
                <div class="w-75 d-flex jumbotron shadow flex-column flex-grow-1">
                    <div class="d-flex flex-row justify-content-between">
                            
                            

                        
                            <h3 class="display-5">@bluePrint.Name</h3>
                            <div class="progress w-50" style= "background-color: white;">

                               
                              <div class="progress-bar" style= "width:@bluePrint.Progress%" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">@bluePrint.Progress%</div>
                            </div>
                        </div>
                    
                    <div class="d-flex flex-column justify-content-between">
                        <p>@bluePrint.Description</p>
                    </div>
                    <a class="display-2 btn-lg btn-primary" style="width: 70px" asp-controller="BluePrints" asp-action="Details" asp-route-id="@bluePrint.ID" >Visit</a>
                </div>
            </div>
        }

