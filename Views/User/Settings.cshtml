@{
    ViewData["Title"] = "UserSettings";  
}

@model User

<div class="d-1 d-flex flex-column w-100">
    <h1 class="display-4 align-self-start p-4">Settings</h1>



        <h1>Builder Settings</h1>
    <form method="POST" class= id="saveSettings" action="/Home/Index" >

        <div class="d-flex flex-row align-items-center">
            <h4 class="p-4">Free Hours</h4>
            <input type="text"  class ="form-control w-25" placeholder="Enter Weekly Free Time In Hours" name="url"/>
        </div>

        <div class="d-flex flex-row align-items-center">
            <h4 class="p-4">Email</h4>
            <input type="text"  class ="form-control w-25" placeholder="Enter " name="url"/>
        </div>

        <div class="d-flex flex-row align-items-center">
            <h4 class="p-4">Discord Tag</h4>
            <input type="text"  class ="form-control w-25" placeholder="Enter" name="url"/>
        </div>

        <div class="d-flex flex-row align-items-center">
            <h4 class="p-4">PrefferedLangs</h4>
            <input type="text"  class ="form-control w-25" placeholder="Enter" name="url"/>
        </div>

        <div class="d-flex flex-row align-items-center">
            <h4 class="p-4">Free Hours</h4>
            <input type="text"  class ="form-control w-25" placeholder="Enter " name="url"/>
        </div>

    <h1>Supporter Settings</h1>

        <div class="d-flex flex-row align-items-center">
            <h4 class="p-2">Receive Email Updates</h4>
            <input type="checkbox"  class ="form-control w-25" placeholder=" Get Email Updates" name="url"/>
        </div>

        
        <input type="submit" class ="btn btn-primary flex-shrink-1" value="Save Settings"/>
    </form>





</div>